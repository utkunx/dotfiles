########################
	# Shrink File Chooser #
		for_window [window_role="GtkFileChooserDialog"] resize shrink height 10 px

	# Update (WS0) #
		assign [instance="Update"] workspace $ws0

	# Terminal (WS1) #
		#assign [class="Termite"] workspace $ws1

