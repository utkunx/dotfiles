	# assign [class="Thunar"] workspace $ws3 utku file manager i iptal etti #
		assign [class="jetbrains-webstorm"] workspace $ws1
		assign [class="jetbrains-pycharm"] workspace $ws1
	# Texting (WS4) #
		assign [class="TelegramDesktop"] workspace $ws4
